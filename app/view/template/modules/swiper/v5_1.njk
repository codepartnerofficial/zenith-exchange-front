<section class="v501-swiper-base">
  <style>
    .v501-swiper-base {
      width: 100%;
    }
    .v501-swiper-base .banner {
      width: 100%;
      height: 580px;
      background: url("http://dev-saas-oss.oss-accelerate.aliyuncs.com/upload/20210602112415045.png") no-repeat center center;
      background-size: 2560px 580px;
    }
    .v501-swiper-base .banner .banner-info {
      width: 1200px;
      height: 100%;
      margin: auto;
      position: relative;
      box-sizing: border-box;
      padding-top: 160px;
    }
    .v501-swiper-base .banner .title {
      line-height: 51px;
      font-size: 40px;
      font-family: DINPro-Bold;
    }
    .v501-swiper-base .banner .subTitle {
      font-size: 18px;
      line-height: 23px;
      margin-top: 16px;
      font-family: DINPro-Medium;
      color: #747F91;
    }
    .v501-swiper-base .banner .button {
      width: 220px;
      height: 44px;
      margin-top: 40px;
      border-radius: 4px;
      font-size: 16px;
      font-family: DINPro-Medium;
      background: #2762FF;
    }
    .v501-swiper-base .banner .symbol {
      width: 100%;
      position: absolute;
      left: 0;
      bottom: 77px;
    }
    .v501-swiper-base .swiper-wrap {
      width: 100%;
      padding-top: 40px;
      border-radius: 36px 36px 0 0;
      margin-bottom: 33px;
      margin-top: -40px;
      background: #ffffff;
    }
    .v501-swiper-base .slide-list {
      height: 140px;
      display: flex;
    }

  </style>
  <div class="banner">
    <div class="banner-info">
      <div class="title b-8-cl">标题</div>
      <div class="subTItle">副标题</div>
      <button class="button b-8-cl">按钮文案</button>
      {% if headerSymbol.length %}
      <div class="symbol">
        {% include "../recommend/v5_1.njk" %}
      </div>
      {% endif %}
    </div>
  </div>
  <div class="swiper-wrap">
    <button class="prev-btn"></button>
    <ul class="slide-list">
      <li class="slide-item"></li>
    </ul>
    <button class="next-btn"></button>
  </div>
  <script>
    (() => {
    })();
  </script>
</section>
