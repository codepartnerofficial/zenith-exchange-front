<section class="v5-custom-info">
  <style>
    .v5-custom-info {
      font-family: DINPro-Medium;
      font-weight: 500;
    }
    .v5-custom-info .v5-guide, .v5-custom-info .v5-appDownload, .v5-custom-info .v5-service, .v5-custom-info .v5-register-guide {
      transition: all 0.5s;
    }
    .v5-custom-info .title-text {
