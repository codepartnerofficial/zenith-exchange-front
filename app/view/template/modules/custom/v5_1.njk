    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode {
      position: relative;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode .img {
      display: inline-block;
      width: 44px;
      height: 44px;
      box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.1);
      border-radius: 4px;
      padding: 13px;
      box-sizing: border-box;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode .img img {
      width: 18px;
      height: 18px;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode .hoverShow {
      display: none;
      background: #ffffff;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode .hoverHide {
      background: #ffffff;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode:hover .hoverShow {
      display: inline-block;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode:hover .hoverHide {
      display: none;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .download-store {
      width: 160px;
    }
    .v5-custom-info .v5-appDownload .app-preview img {
      width: 501px;
    }
    .v5-custom-info .v5-appDownload .qrcode-preview {
      width: 0;
      height: 0;
      opacity: 0;
      overflow: hidden;
      text-align: center;
      transition: all 0.3s;
      border-radius: 8px;
      box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.1);
      position: absolute;
      left: 0;
      bottom: 56px;
      padding: 15px 15px 0;
      box-sizing: border-box;
      background: #ffffff;
    }
    .v5-custom-info .v5-appDownload .qrcode-preview:hover {
      width: 150px;
      height: 190px;
      opacity: 1;
    }
    .v5-custom-info .v5-appDownload .qrcode-preview img {
      width: 120px;
      height: 120px;
      margin-bottom: 20px;
    }
    .v5-custom-info .v5-appDownload .qrcode-preview span {
      font-size: 14px;
      line-height: 20px;
    }
    .v5-custom-info .v5-appDownload .app-introduce .download .qrcode:hover .qrcode-preview {
      width: 150px;
      height: 190px;
      opacity: 1;
    }
