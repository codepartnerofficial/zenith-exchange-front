      height: 240px;
    }
    .v5-custom-info .v5-guide .guide-item dd {
      font-size: 16px;
      line-height: 26px;
    }
    .v5-custom-info .v5-service {
      margin-top: 120px;
    }
    .v5-custom-info .v5-service .title-text {
      font-size: 32px;
      line-height: 40px;
      margin-bottom: 70px;
    }
    .v5-custom-info .v5-service .service-content {
