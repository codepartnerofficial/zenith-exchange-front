      line-height: 18px;
      margin-top: 16px;
      font-family: DINPro-Medium;
    }
    .v5-custom-info .v5-guide, .v5-custom-info .v5-appDownload, .v5-custom-info .v5-service {
      width: 1200px;
      margin: auto;
    }
    .v5-custom-info .v5-guide .guide-content {
